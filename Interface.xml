          <Anchor point="BOTTOMRIGHT" relativeTo="RPSEmote">
            <Offset>
              <AbsDimension x="-30" y="8"/>
            </Offset>
          </Anchor>
        </Anchors>
        <Scripts>
          <OnVerticalScroll>
            if (RPSEmoteEntry10:IsShown()) then
              FauxScrollFrame_OnVerticalScroll(self, offset, 32, RPSEmoteFramework:GenerateScrollMenu());
              FauxScrollFrame_OnVerticalScroll(self, offset, 32, RPSEmoteFramework:GenerateScrollMenu());
            else
              FauxScrollFrame_OnVerticalScroll(self, offset, 32, RPSEmoteFramework:GenerateScrollMenu());
            end
          </OnVerticalScroll>
        </Scripts>
      </ScrollFrame>

